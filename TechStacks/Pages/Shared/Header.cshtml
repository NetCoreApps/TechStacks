<header class="border-b border-gray-200 dark:border-gray-600">
    <div class="flex flex-wrap items-center">
        <div class="flex flex-grow flex-shrink flex-nowrap justify-end items-center">
            <nav class="toolbar toolbar--clipped toolbar--fixed theme--dark" data-booted="true" style="margin-top: 0px;padding-right: 0px;padding-left: 0px;transform: translateY(0px);background: rgb(36, 41, 46);">
                <div class="toolbar__content" style="height: 64px;">
                    <a href="/" class="" style="color: rgb(255, 255, 255); text-decoration: none;">
                        <div class="toolbar__title" style="font-size: 26px;">TechStacks</div>
                    </a><a href="/posts/5944/welcome" class="slogan">no noise, just tech!</a>
                    <div class="spacer"></div>
                    <div class="toolbar__items hidden-sm-and-down">
                        <a href="/" class="btn btn--flat btn--router" title="Home (1 or H)" style="position: relative;">
                            <div class="btn__content">
                                <i aria-hidden="true" class="icon material-icons">home</i>
                            </div>
                        </a>
                        <a href="/top/" class="btn btn--flat btn--router" title="Top Technologies (2)" style="position: relative;">
                            <div class="btn__content">Top</div>
                        </a>
                        <a href="/stacks/" class="btn btn--flat btn--router" title="Technology Stacks (3)" style="position: relative;">
                            <div class="btn__content">Stacks</div>
                        </a>
                        <a href="/tech/" aria-current="page" class="btn btn--flat btn--router" title="Technologies (4)"style="position: relative;">
                            <div class="btn__content">Technologies</div>
                        </a>
                        @if (IsAuthenticated)
                        {
                            <div class="menu" style="display: inline-block;">
                                <div class="menu__activator">
                                    <a href="/Identity/Account/Manage" class="btn btn--flat" style="position: relative;">
                                        <div class="btn__content">
                                            <img src="@User.GetPicture()" style="height:40px;border-radius:50%;">
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" type="button" class="btn btn--flat btn--router" title="Sign In" style="position: relative;">
                                <div class="btn__content">Sign In</div>
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>
