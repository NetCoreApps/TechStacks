@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="mt-8 mx-auto max-w-lg">
    <h1 class="@Css.H1">Register confirmation</h1>

    @if (@Model.DisplayConfirmAccountLink)
    {
        <p class="my-4">
            This app does not currently have a real email sender registered, see
            <a class="@Css.Link font-semibold" href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
        </p>
        <p class="my-4">
            Normally this would be emailed:
            <a class="@Css.Link font-semibold" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
        </p>
    }
    else
    {
        <p class="my-4">Please check your email to confirm your account.</p>
    }
</div>
